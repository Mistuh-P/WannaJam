<% include ../partials/header.ejs %>


<div class='container col-md-6 col-md-offset-3 sign-div'>
<% include ../partials/alerts.ejs%>
<form class="form" method="post" action="/auth/edit">
        <b><h2>Name:</h2></b>
        <input id="sign-up-form" type="text" class="form-control" value="<%= user.name %>" placeholder="Enter your name" name="name">
        <br><br>
        <b><h2>Street Address:</h2></b>
        <input id="sign-up-form" type="text" class="form-control" value="<%= user.street %>" placeholder="Enter your street address" name="street">
        <br><br>
        <b><h2>City:</h2></b>
        <input id="sign-up-form" type="text" class="form-control" value="<%= user.city %>" placeholder="Enter your city" name="city">
        <br><br>
        <!-- <b>State Code:</b>
        <input id="sign-up-form" type="text" class="form-control" value="<%= user.state %>" placeholder="Enter your state code example: CA (california)" name="state">
        <br><br> -->
        <b><h2>Bio:</h2></b>
        <input id="sign-up-form" type="text" class="form-control" value="<%= user.bio %>" placeholder="Describe yourself " name="bio">
        <br><br>

        <div class='col-sm-6 col-sm-6-offset-3'>
        <input id="sign-up-form" type="submit" value="Do it" class="log-bt btn btn-warning">
        </div>
    </form>
</div>




















